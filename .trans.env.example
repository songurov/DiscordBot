# Required secrets
DISCORD_BOT_TOKEN=PASTE_DISCORD_BOT_TOKEN
OPENAI_API_KEY=PASTE_OPENAI_API_KEY

# One of the two modes below is required:
# 1) Server channel mode (recommended)
DISCORD_CHANNEL_ID=PASTE_CHANNEL_ID
# 2) DM mode with bot (leave empty if using channel)
DISCORD_TARGET_USER_ID=

# Restrict processing to specific Discord users (comma separated IDs)
DISCORD_ALLOWED_USER_IDS=653582557711040513,938846694286704680

# Language quick controls used by "trans set lang-in / lang-out"
# On start, if both are present, LANGUAGE_PAIRS is generated automatically.
TRANS_LANG_IN=ro
TRANS_LANG_OUT=en

# Advanced routing
LANGUAGE_PAIRS=ro:en,en:ro,ru:en,en:ru
DEFAULT_TARGET_LANGUAGE=
DISCORD_USER_TARGET_LANGUAGES=

# Runtime behavior
OPENAI_MODEL=gpt-4.1-mini
POLL_INTERVAL_MS=2500
POLL_LIMIT=50
REQUIRE_START_COMMAND=true
BOT_COMMAND_PREFIX=!bot
REPLY_WITH_QUOTE=true

# Delete original messages (optional)
DELETE_ORIGINAL_ON_TRANSLATION=false
DELETE_ORIGINAL_SOURCE_LANGUAGES=
DELETE_ORIGINAL_USER_IDS=

# Legacy compatibility alias (optional)
DELETE_ORIGINAL_RO_TO_EN=false
