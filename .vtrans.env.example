# Required secrets
DISCORD_BOT_TOKEN=PASTE_DISCORD_BOT_TOKEN
OPENAI_API_KEY=PASTE_OPENAI_API_KEY

# Voice target channel (required)
DISCORD_VOICE_CHANNEL_ID=PASTE_VOICE_CHANNEL_ID

# Optional text channel for bot commands and feedback
DISCORD_CONTROL_CHANNEL_ID=PASTE_TEXT_CHANNEL_ID

# Restrict to allowed speakers (comma separated user IDs)
VOICE_ALLOWED_USER_IDS=653582557711040513,938846694286704680

# Translation routing
LANGUAGE_PAIRS=ro:en,en:ro
DEFAULT_TARGET_LANGUAGE=
DISCORD_USER_TARGET_LANGUAGES=

# OpenAI models
OPENAI_MODEL=gpt-4.1-mini
OPENAI_TRANSCRIBE_MODEL=whisper-1
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_TTS_VOICE=alloy
OPENAI_TTS_FORMAT=opus

# Audio chunking
SPEECH_SILENCE_MS=1200
VOICE_MIN_PCM_BYTES=96000
VOICE_MAX_PCM_BYTES=9600000

# Bot behavior
REQUIRE_START_COMMAND=true
BOT_COMMAND_PREFIX=!vbot
START_COMMANDS=start,/start,!start
STOP_COMMANDS=stop,/stop,!stop
STATUS_COMMANDS=status,/status,!status

# Optional text output with translated text in control channel
VOICE_TEXT_FEEDBACK=false
